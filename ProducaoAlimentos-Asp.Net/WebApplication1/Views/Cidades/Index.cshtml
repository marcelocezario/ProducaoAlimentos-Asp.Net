@model IEnumerable<WebApplication1.Models.Cidade>

@{
    ViewBag.Title = "Index";
}

<h2>Cidades</h2>

<p>
    @Html.ActionLink("Nova cidade", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CidadeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._Estado.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CidadeID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._Estado.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.CidadeID }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.CidadeID }) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.CidadeID })
        </td>
    </tr>
}

</table>
