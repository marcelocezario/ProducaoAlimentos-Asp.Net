@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item._Fornecedor.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._Insumo.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._Marca.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataCompra)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QtdeInicial)
        </td>
