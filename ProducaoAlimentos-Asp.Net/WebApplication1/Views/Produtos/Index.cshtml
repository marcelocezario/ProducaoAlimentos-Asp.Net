@model IEnumerable<WebApplication1.Models.Produto>

@{
    ViewBag.Title = "Index";
}

<h2>Produtos</h2>

<p>
    @Html.ActionLink("Novo Produto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model._UnidadeDeMedida.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item._UnidadeDeMedida.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.ProdutoID }, new { @class= "btn btn-default"} )
                <a href="#" class="btn btn-default btnDetails" data-value="@item.ProdutoID">Detalhes</a>
                @Html.ActionLink("Excluir", "Delete", new { id = item.ProdutoID }, new { @class= "btn btn-default"})
            </td>
        </tr>
    }

</table>


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">

                <div id="conteudoModal"></div>

            </div>

        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        $(document).ready(function () {

            $(".btnDetails").click(function () {

                var ProdutoID = $(this).data("value");

                $("#conteudoModal").load("/Produtos/Details/" + ProdutoID,
                    function () {
                        $('#myModal').modal("show");

                    });
            });
        });

        $(document).ready(function () {

            $(".btnDelete").click(function () {

                var InsumoID = $(this).data("value");

                $("#conteudoModal").load("/Produtos/Details/" + InsumoID,
                    function () {
                        $('#myModal').modal("show");

                    });
            });
        });

    </script>
}

