@model IEnumerable<WebApplication1.Models.LoteInsumo>

@{
    ViewBag.Title = "Index";
}

<h2>Lotes Insumos</h2>

<p>
    @Html.ActionLink("Novo Lote Insumo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._Insumo.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._Marca.Nome)
        </th>
        <th>
            Fornecedor
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCompra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QtdeInicial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QtdeDisponivel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustoMedio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustoTotalInicial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Validade)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._Insumo.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._Marca.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._Fornecedor.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdeInicial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdeDisponivel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustoMedio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustoTotalInicial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Validade)
            </td>
            <td>
                <a href="#" class="btnEdit" data-value="@item.ID">Editar</a> |
                <a href="#" class="btnDetails" data-value="@item.ID">Detalhes</a> |
                <a href="#" class="btnDelete" data-value="@item.ID">Excluir</a>
            </td>
        </tr>
    }

</table>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="modal-header">
                    <div id="conteudoModal">
                    </div>
                </div>
                <a href="#" class="btnVoltar">Voltar</a>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        $(document).ready(function () {

            $(".btnEdit").click(function () {

                var id = $(this).data("value");

                $("#conteudoModal").load("/LotesInsumos/Edit/" + id,
                    function () {
                        $('#myModal').modal("show");

                    });
            });
        });

        $(document).ready(function () {

            $(".btnDetails").click(function () {

                var id = $(this).data("value");

                $("#conteudoModal").load("/LotesInsumos/Details/" + id,
                    function () {
                        $('#myModal').modal("show");

                    });
            });
        });

        $(document).ready(function () {

            $(".btnDelete").click(function () {

                var id = $(this).data("value");

                $("#conteudoModal").load("/LotesInsumos/Delete/" + id,
                    function () {
                        $('#myModal').modal("show");

                    });
            });
        });

        $(document).ready(function () {
            $(".btnVoltar").click(function () {
                $('#myModal').modal("hide");
                window.location.reload();
            })
        })


    </script>
}