        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ItemVendaID)

        <div class="form-group">
            @Html.LabelFor(model => model.ValorUnitarioItem, htmlAttributes: new { @class = "control-label col-md-2" })
