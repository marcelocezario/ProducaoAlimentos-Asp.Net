@model IEnumerable<WebApplication1.Models.LoteInsumo>

@{
    ViewBag.Title = "Index";
}

<h2>Lotes Insumos</h2>

<p>
    @Html.ActionLink("Novo Lote Insumo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model._Fornecedor.Nome)
        </th>
        <th>
