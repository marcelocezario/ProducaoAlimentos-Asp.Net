@model IEnumerable<WebApplication1.Models.Marca>

@{
    ViewBag.Title = "Index";
}

<h2>Marcas</h2>

<p>
    @Html.ActionLink("Nova Marca", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.MarcaID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.MarcaID }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.MarcaID })
        </td>
    </tr>
}

</table>
