@model IEnumerable<WebApplication1.Models.MovimentacaoEstoqueProduto>

@{
    ViewBag.Title = "Index";
}

<h2>Movimentação Estoque Produtos</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataMovimentacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._LoteProduto._Produto.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qtde)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorMovimentacao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataMovimentacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._LoteProduto._Produto.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qtde)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorMovimentacao)
        </td>
        <td>
            <a href="#" class="btnDetails" data-value="@item.ID">Detalhes</a>
        </td>
    </tr>
    }

</table>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="modal-header">
                    <div id="conteudoModal">
                    </div>
                </div>
                <a href="#" class="btnVoltar">Voltar</a>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        $(document).ready(function () {

            $(".btnDetails").click(function () {

                var id = $(this).data("value");

                $("#conteudoModal").load("/MovimentacoesEstoqueProdutos/Details/" + id,
                    function () {
                        $('#myModal').modal("show");
                    });
            });
        });

        $(document).ready(function () {
            $(".btnVoltar").click(function () {
                $('#myModal').modal("hide");
                window.location.reload();
            })
        })

    </script>
}

