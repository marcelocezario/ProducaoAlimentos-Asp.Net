@model WebApplication1.Models.Produto

@{
    ViewBag.Title = "Delete";
}

<h2>Excluir Produto</h2>

<h3>Tem certeza que deseja excluir este lançamento?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="dl-horizontal">
        <h5>Produto</h5>

        <dt>
            @Html.DisplayNameFor(model => model.ProdutoID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProdutoID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model._UnidadeDeMedida.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model._UnidadeDeMedida.Nome) (@Html.DisplayFor(model => model._UnidadeDeMedida.Sigla))
        </dd>
        <hr />
        <h5>Composição</h5>
        <ul>
            @foreach (var item in Model._ComposicaoProduto)
        {
            <li>
                @item.QtdeInsumo
                @item._Insumo._UnidadeDeMedida.Sigla
                @item._Insumo.Nome

            </li>
    }
        </ul>



    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" />
        </div>
    }
</div>
