@model IEnumerable<WebApplication1.Models.EstoqueProduto>

@{
    ViewBag.Title = "Index";
}

<h2>Estoque Produtos</h2>

<p>
    @Html.ActionLink("Novo Estoque Produto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model._Produto.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QtdeTotalEstoque)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustoTotalEstoque)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item._Produto.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QtdeTotalEstoque)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustoTotalEstoque)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.ID }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
