            @foreach (var item in Model._LoteInsumo._LotesInsumosProducao)
            {
                <li>
                    @item._LoteProduto.DataProducao |
                    @item.QtdeInsumo
                    @item._LoteInsumo._Insumo._UnidadeDeMedida.Sigla |
