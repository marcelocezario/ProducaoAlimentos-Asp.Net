@model IEnumerable<WebApplication1.Models.Insumo>

@{
    ViewBag.Title = "Index";
}

<h2>Insumos</h2>

<p>
    @Html.ActionLink("Novo Insumo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InsumoID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._UnidadeDeMedida.Nome)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.InsumoID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._UnidadeDeMedida.Nome) (@Html.DisplayFor(modelItem => item._UnidadeDeMedida.Sigla))
        </td>
        <td>
            <a href="#" class="btn btn-default btnEdit" data-value="@item.InsumoID">Editar</a>
            <a href="#" class="btn btn-default btnDetails" data-value="@item.InsumoID">Detalhes</a>
            <a href="#" class="btn btn-default btnDelete" data-value="@item.InsumoID">Excluir</a>
        </td>
    </tr>
    }

</table>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">

                <div id="conteudoModal"></div>

            </div>

        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        $(document).ready(function () {

            $(".btnEdit").click(function () {

                var InsumoID = $(this).data("value");

                $("#conteudoModal").load("/Insumos/Edit/" + InsumoID,
                    function () {
                        $('#myModal').modal("show");

                    });
            });
        });

        $(document).ready(function () {

            $(".btnDetails").click(function () {

                var InsumoID = $(this).data("value");

                $("#conteudoModal").load("/Insumos/Details/" + InsumoID,
                    function () {
                        $('#myModal').modal("show");

                    });
            });
        });

        $(document).ready(function () {

            $(".btnDelete").click(function () {

                var InsumoID = $(this).data("value");

                $("#conteudoModal").load("/Insumos/Delete/" + InsumoID,
                    function () {
                        $('#myModal').modal("show");

                    });
            });
        });


    </script>
}