@model IEnumerable<WebApplication1.Models.Venda>

@{
    ViewBag.Title = "Index";
}

<h2>Vendas</h2>

<p>
    @Html.ActionLink("Nova venda", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ValorTotalVenda)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataVenda)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ValorTotalVenda)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataVenda)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.VendaID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.VendaID }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.VendaID })
        </td>
    </tr>
}

</table>
