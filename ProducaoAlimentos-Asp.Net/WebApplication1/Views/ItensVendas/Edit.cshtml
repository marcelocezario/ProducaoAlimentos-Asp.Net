@model WebApplication1.Models.ItemVenda

@{
    ViewBag.Title = "Edit";
}

<h2>Editar Item Venda</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
