@model WebApplication1.Models.LoteInsumo

@{
    ViewBag.Title = "Edit";
}

<h2>Editar Lote Insumo</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.QtdeDisponivel)
        @Html.HiddenFor(model => model.InsumoID)
        @Html.HiddenFor(model => model.DataCompra)


        <div class="form-group">
            @Html.LabelFor(model => model.MarcaID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MarcaID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MarcaID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FornecedorID, htmlAttributes: new { @class = "control-label col-md-2" })
